.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
  background-color: #f4f4f4;
}

.reg-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 250px;
  padding: 20px;
  text-align: center;
  background: white;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgb(0 0 0 / 20%);
}

.reg-form input {
  width: 100%;
  margin: 10px 0;
  padding: 10px;
  border: 1px solid #cccccc;
  border-radius: 5px;
}

.reg-form input.error {
  border-color: #ff3333;
}

.error-message {
  display: none;
  width: 100%;
  margin-top: -5px;
  margin-bottom: 5px;
  color: #ff3333;
  font-size: 12px;
  text-align: left;
}

.reg-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: auto;
}

.reg-form button {
  width: 100%;
  margin-bottom: 10px;
  padding: 10px;
  color: white;
  font-size: 16px;
  background: #007bff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.reg-form button:hover {
  background: #0056b3;
}

.reg-form a {
  color: #007bff;
  font-size: 14px;
  text-decoration: none;
}

.reg-form a:hover {
  text-decoration: underline;
}
