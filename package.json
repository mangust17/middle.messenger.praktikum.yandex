{
  "name": "messanger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "prepare": "husky install",
    "preview": "vite preview",
    "start": "vite build && vite preview --port 3000",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "check": "npm run lint && npm run type-check",
    "lint:styles": "stylelint 'src/**/*.{css,scss,less}' --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --ignore-path ./.prettierignore"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "postcss": "^8.5.2",
    "prettier": "^2.8.8",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "dependencies": {
    "16": "^0.0.2",
    "@types/jest": "^29.5.14",
    "handlebars": "^4.7.8",
    "nanoid": "^5.1.2",
    "node": "^23.8.0",
    "node-fetch": "^3.3.2",
    "autoprefixer": "^10.4.20"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  }
}
